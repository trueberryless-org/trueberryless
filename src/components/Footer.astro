---
import CallToAction from './CallToAction.astro'
import ExternalLink from './ExternalLink.astro'
import Logo from './Logo.astro'

/**
 * Footer Component
 *
 * @description A component that displays the footer of the website
 */
const currentYear = new Date().getFullYear()
---

<footer>
  <CallToAction />
  <section class="py-20">
    <h2 class="sr-only">Footer</h2>
    <div class="container grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
      <div class="flex flex-col gap-4">
        <h3 class="text-2xl font-bold">Navigation</h3>
        <ul class="flex flex-col gap-2">
          <li><a href="/">Home</a></li>
          <li><a href="/portfolio">Portfolio</a></li>
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <h3 class="text-2xl font-bold">Starlight Plugins</h3>
        <ul class="flex flex-col gap-2">
          <li>
            <ExternalLink href="https://starlight-sidebar-topics-dropdown.trueberryless.org"
              >Sidebar Topics Dropdown</ExternalLink
            >
          </li>
          <li><ExternalLink href="https://starlight-view-modes.trueberryless.org">View Modes</ExternalLink></li>
          <li><ExternalLink href="https://starlight-cooler-credit.trueberryless.org">Cooler Credit</ExternalLink></li>
          <li><ExternalLink href="https://starlight-theme-next.trueberryless.org">Next.js Theme</ExternalLink></li>
          <li>
            <ExternalLink
              href="https://github.com/search?q=org%3Atrueberryless-org+starlight-&type=repositories&s=stars&o=desc"
              >and more...</ExternalLink
            >
          </li>
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <h3 class="text-2xl font-bold">Additional content</h3>
        <ul class="flex flex-col gap-2">
          <li>
            <a href="/username">trueberryless?</a>
          </li>
          <li>
            <a href="/resume">Curriculum Vitae</a>
          </li>
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <Logo loading="lazy" />
        <ul class="flex flex-col gap-2">
          <li>
            <ExternalLink href="https://github.com/trueberryless">GitHub</ExternalLink>
          </li>
          <li>
            <ExternalLink href="https://bsky.app/profile/trueberryless.org">Bluesky</ExternalLink>
          </li>
          <li>
            <ExternalLink href="https://astro.badg.es/contributor/trueberryless/">Astro Contributions</ExternalLink>
          </li>
        </ul>
      </div>
    </div>
  </section>
  <section class="py-8">
    <div class="container flex flex-col gap-4 md:flex-row md:justify-between">
      <p>
        &copy; {currentYear} - Personal website built with <a href="https://accessible-astro-starter.incluud.dev"
          >Accessible Starter</a
        > for <a href="https://astro.build/">Astro</a>.
      </p>
      <p>
        Made with ❤️ by <a href="https://github.com/trueberryless">trueberryless</a>.
      </p>
    </div>
  </section>
</footer>

<style>
  section {
    border-top: 1px solid var(--border-color-subtle);
  }
</style>
