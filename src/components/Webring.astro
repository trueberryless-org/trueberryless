---
const webrings = [
  {
    name: "Built with Astro",
    color: "var(--ctp-red)",
    links: {
      previous:
        "https://astro-webrings.lou.gg/prev?site=trueberryless.org&ring=built-with-astro",
      next: "https://astro-webrings.lou.gg/next?site=trueberryless.org&ring=built-with-astro",
    },
  },
  {
    name: "Catppuccin",
    color: "var(--ctp-lavender)",
    links: {
      previous: "https://ctp-webr.ing/trueberryless/previous",
      next: "https://ctp-webr.ing/trueberryless/next",
    },
  },
  {
    name: "Friends of Houston",
    color: "var(--ctp-yellow)",
    links: {
      previous:
        "https://astro-webrings.lou.gg/prev?site=trueberryless.org&ring=friends-of-houston",
      next: "https://astro-webrings.lou.gg/next?site=trueberryless.org&ring=friends-of-houston",
    },
  },
];
---

<section class="webring">
  <div class="content">
    <h2 class="section-title">Webrings</h2>
    <ul class="rings">
      {
        webrings.map((ring) => (
          <li class="ring-item" style={`--ring-color: ${ring.color}`}>
            <div class="ring-wrapper">
              <a
                href={ring.links.previous}
                class="ring-hover-area ring-hover-left"
                aria-label={`Previous site in ${ring.name}`}
              />
              <a
                href={ring.links.next}
                class="ring-hover-area ring-hover-right"
                aria-label={`Next site in ${ring.name}`}
              />
              <div class="ring-box">
                <svg class="ring-arrow" viewBox="0 0 24 24" fill="none">
                  <path
                    d="M19 12H5M5 12L12 19M5 12L12 5"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                </svg>
                <span class="ring-name">{ring.name}</span>
                <svg class="ring-arrow" viewBox="0 0 24 24" fill="none">
                  <path
                    d="M5 12H19M19 12L12 5M19 12L12 19"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                </svg>
              </div>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</section>
<style>
  .webring {
    padding: 6rem 2rem;
    display: flex;
    justify-content: center;
  }
  .content {
    max-width: 600px;
    width: 100%;
  }
  .section-title {
    font-size: 2rem;
    font-weight: 600;
    color: var(--ctp-text);
    margin-bottom: 3rem;
    text-align: center;
  }
  .rings {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .ring-item {
    position: relative;
  }
  .ring-wrapper {
    position: relative;
  }
  .ring-hover-area {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 50%;
    z-index: 2;
    cursor: pointer;
  }
  .ring-hover-left {
    left: 0;
  }
  .ring-hover-right {
    right: 0;
  }
  .ring-box {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 1.5rem 2rem;
    background-color: var(--ctp-surface0);
    border: 2px solid var(--ring-color);
    border-radius: 12px;
    position: relative;
    overflow: hidden;
    transition: transform 0.3s ease;
    pointer-events: none;
    z-index: 1;
  }
  .ring-box::before {
    content: "";
    position: absolute;
    inset: -1px;
    background-color: var(--ring-color);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 0;
  }
  .ring-hover-left:hover ~ .ring-box {
    transform: translateX(-8px);
  }
  .ring-hover-right:hover ~ .ring-box {
    transform: translateX(8px);
  }
  .ring-hover-left:hover ~ .ring-box::before {
    transform: scaleX(1);
    transform-origin: left;
  }
  .ring-hover-right:hover ~ .ring-box::before {
    transform: scaleX(1);
    transform-origin: right;
  }
  .ring-wrapper:has(.ring-hover-left:hover) .ring-box::before {
    transform-origin: left;
  }
  .ring-wrapper:has(.ring-hover-right:hover) .ring-box::before {
    transform-origin: right;
  }
  .ring-name {
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--ctp-text);
    text-align: center;
    flex: 1;
    transition: color 0.3s ease;
    z-index: 1;
  }
  .ring-arrow {
    width: 24px;
    height: 24px;
    color: var(--ring-color);
    transition: color 0.3s ease;
    flex-shrink: 0;
    z-index: 1;
  }
  .ring-hover-left:hover ~ .ring-box .ring-arrow,
  .ring-hover-left:hover ~ .ring-box .ring-name,
  .ring-hover-right:hover ~ .ring-box .ring-arrow,
  .ring-hover-right:hover ~ .ring-box .ring-name {
    color: var(--ctp-base);
  }
  @media (max-width: 600px) {
    .webring {
      padding: 4rem 2rem;
    }
    .section-title {
      font-size: 1.5rem;
      margin-bottom: 2rem;
    }
    .ring-box {
      padding: 1.25rem 1.5rem;
    }
    .ring-name {
      font-size: 1.1rem;
    }
  }
</style>
