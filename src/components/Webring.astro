---
const webrings = [
  {
    name: "Built with Astro",
    color: "var(--ctp-red)",
    links: {
      previous:
        "https://astro-webrings.lou.gg/previous?site=trueberryless.org&ring=built-with-astro",
      next: "https://astro-webrings.lou.gg/next?site=trueberryless.org&ring=built-with-astro",
    },
  },
  {
    name: "Catppuccin",
    color: "var(--ctp-lavender)",
    links: {
      previous: "https://ctp-webr.ing/trueberryless/previous",
      next: "https://ctp-webr.ing/trueberryless/next",
    },
  },
  {
    name: "Friends of Houston",
    color: "var(--ctp-yellow)",
    links: {
      previous:
        "https://astro-webrings.lou.gg/previous?site=trueberryless.org&ring=friends-of-houston",
      next: "https://astro-webrings.lou.gg/next?site=trueberryless.org&ring=friends-of-houston",
    },
  },
];
---

<section class="webring">
  <div class="content">
    <h2 class="section-title">Webrings</h2>
    <ul class="rings">
      {
        webrings.map((ring) => (
          <li class="ring-item" style={`--ring-color: ${ring.color}`}>
            <span class="ring-icon">â—ˆ</span>
            <span class="ring-name">{ring.name}</span>
            <div class="ring-buttons">
              <a
                href={ring.links.previous}
                class="ring-link"
                target="_blank"
                rel="noopener noreferrer"
                aria-label={`Previous site in ${ring.name}`}
              >
                <svg class="ring-arrow" viewBox="0 0 24 24" fill="none">
                  <path
                    d="M17 17L7 7M7 7H17M7 7V17"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                </svg>
              </a>
              <a
                href={ring.links.next}
                class="ring-link"
                target="_blank"
                rel="noopener noreferrer"
                aria-label={`Next site in ${ring.name}`}
              >
                <svg class="ring-arrow" viewBox="0 0 24 24" fill="none">
                  <path
                    d="M7 17L17 7M17 7H7M17 7V17"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                </svg>
              </a>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</section>
<style>
  .webring {
    padding: 6rem 2rem;
    display: flex;
    justify-content: center;
  }
  .content {
    max-width: 600px;
    width: 100%;
  }
  .section-title {
    font-size: 2rem;
    font-weight: 600;
    color: var(--ctp-text);
    margin-bottom: 3rem;
    text-align: center;
  }
  .rings {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .ring-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem 2rem;
    background-color: var(--ctp-surface0);
    border: 2px solid var(--ring-color);
    border-radius: 12px;
    position: relative;
    overflow: hidden;
  }
  .ring-icon {
    font-size: 1.5rem;
    color: var(--ring-color);
    transition: all 0.3s ease;
  }
  .ring-name {
    flex: 1;
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--ctp-text);
  }
  .ring-buttons {
    display: flex;
    gap: 0.5rem;
  }
  .ring-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background-color: var(--ctp-surface0);
    border: 2px solid var(--ring-color);
    border-radius: 8px;
    text-decoration: none;
    color: var(--ctp-text);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }
  .ring-link::before {
    content: "";
    position: absolute;
    inset: -1px;
    background-color: var(--ring-color);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 0;
  }
  .ring-link:hover::before {
    transform: scaleX(1);
  }
  .ring-arrow {
    width: 24px;
    height: 24px;
    color: var(--ring-color);
    transition: all 0.3s ease;
    z-index: 1;
  }
  .ring-link:hover {
    transform: translateX(8px);
  }
  .ring-link:hover .ring-arrow {
    color: var(--ctp-base);
  }
  .ring-link:first-child:hover {
    transform: translateX(-8px);
  }
  @media (max-width: 600px) {
    .webring {
      padding: 4rem 2rem;
    }
    .section-title {
      font-size: 1.5rem;
      margin-bottom: 2rem;
    }
    .ring-item {
      padding: 1.25rem 1.5rem;
      flex-wrap: wrap;
    }
    .ring-name {
      font-size: 1.1rem;
    }
    .ring-buttons {
      flex: 1 1 100%;
      justify-content: center;
      gap: 1rem;
      margin-top: 0.75rem;
    }
    .ring-link {
      flex: 1;
      max-width: 120px;
    }
  }
</style>
