---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import PageHeader from '@components/PageHeader.astro'
import SocialShares from '@components/SocialShares.astro'
import { getCollection, render } from 'astro:content'
import type { CollectionEntry } from 'astro:content'

export async function getStaticPaths() {
  const special = await getCollection('special')

  return special.map((s, index) => {
    return {
      params: { special: s.id },
      props: { special: s },
    }
  })
}

interface Props {
  special: CollectionEntry<'special'>
}

const { special } = Astro.props
const { Content } = await render(special)
---

<DefaultLayout title={special.data.title} description={special.data.description} url={special.data.title}>
  <PageHeader
    title={special.data.title}
    subtitle={special.data.description}
    bgType="bordered"
    featuredImage={special.data.cover.image}
    featuredImageAlt={special.data.cover.alt}
  />
  <section class="my-12">
    <div class="narrow space-content container">
      <Content />
    </div>
  </section>
</DefaultLayout>

<style lang="scss" is:global>
  .narrow {
    margin-inline: auto;
    max-width: 65ch;
  }
</style>
