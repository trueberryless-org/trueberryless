  <section class="my-64">
    <div class="space-content container">
      <h2 class="text-6xl">Tools</h2>
      <p class="text-2xl">Here you can take a look at some tools I use on a regular basis:</p>
      <AvatarGroup display="grid" gridItemsSize="300px" gridGap="2rem" class="languages-light-mode">
        <Avatar img={sharp.src} initials="C#" title="C#" subtitle="Main Programming Language" shape="square" />
        <Avatar img={astro.src} initials="SL" title="Astro" subtitle="Main Frontend Language" shape="square" />
        <Avatar img={mongodb.src} initials="DB" title="MongoDB" subtitle="Favourite Database" shape="square" />
        <Avatar img={graphql.src} initials="QL" title="GraphQL" subtitle="Favourite Query Language" shape="square" />
        <Avatar img={typescript.src} initials="TS" title="Typescript" subtitle="Secondary Language" shape="square" />
        <Avatar img={argo.src} initials="CD" title="ArgoCD" subtitle="Favourite Deployment Tool" shape="square" />
        <Avatar img={netlify.src} initials="CD" title="Netlify" subtitle="Main Deployment Tool" shape="square" />
        <Avatar img={postgresql.src} initials="DB" title="PostgreSQL" subtitle="Main Database" shape="square" />
        <Avatar img={docker.src} initials="DC" title="Docker" subtitle="Favourite Virtualisation Type" shape="square" />
        <Avatar img={github.src} initials="GH" title="GitHub" subtitle="Favourite Platform" shape="square" />
        <Avatar img={rider.src} initials="JB" title="Rider" subtitle="Main C# Editor" shape="square" />
        <Avatar img={k3s.src} initials="CD" title="k3s" subtitle="Favourite Deployment Tool" shape="square" />
      </AvatarGroup>
      <AvatarGroup display="grid" gridItemsSize="300px" gridGap="2rem" class="languages-dark-mode">
        <Avatar img={sharpDark.src} initials="C#" title="C#" subtitle="Main Programming Language" shape="square" />
        <Avatar img={astroDark.src} initials="SL" title="Astro" subtitle="Main Frontend Language" shape="square" />
        <Avatar img={mongodbDark.src} initials="DB" title="MongoDB" subtitle="Favourite Database" shape="square" />
        <Avatar
          img={graphqlDark.src}
          initials="QL"
          title="GraphQL"
          subtitle="Favourite Query Language"
          shape="square"
        />
        <Avatar
          img={typescriptDark.src}
          initials="TS"
          title="Typescript"
          subtitle="Secondary Language"
          shape="square"
        />
        <Avatar img={argoDark.src} initials="CD" title="ArgoCD" subtitle="Favourite Deployment Tool" shape="square" />
        <Avatar img={netlifyDark.src} initials="CD" title="Netlify" subtitle="Main Deployment Tool" shape="square" />
        <Avatar img={postgresqlDark.src} initials="DB" title="PostgreSQL" subtitle="Main Database" shape="square" />
        <Avatar
          img={dockerDark.src}
          initials="DC"
          title="Docker"
          subtitle="Favourite Virtualisation Type"
          shape="square"
        />
        <Avatar img={githubDark.src} initials="GH" title="GitHub" subtitle="Favourite Platform" shape="square" />
        <Avatar img={riderDark.src} initials="JB" title="Rider" subtitle="Main C# Editor" shape="square" />
        <Avatar img={k3sDark.src} initials="CD" title="k3s" subtitle="Favourite Deployment Tool" shape="square" />
