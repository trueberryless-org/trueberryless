    </div>
  </section>
  <section class="mt-64 mb-32">
    <div class="container">
      <h2 class="mb-16 text-6xl">Impact in numbers</h2>
      <div class="grid grid-cols-1 gap-12 sm:grid-cols-2 md:grid-cols-4">
        <Counter count="130+" title="Stars" sub="On GitHub" />
        <Counter count="3.6k" title="Commits" sub="Jan-Jul 2025" />
        <Counter count="800+" title="PRs" sub="Merged" />
        <Counter count="6+" title="Years" sub="Experience" />
      </div>
    </div>
  </section>
</DefaultLayout>

<style>
  .avatar {
    gap: 2rem;
    border: 1px solid var(--border-color-subtle);
    border-radius: var(--radius-md);
    padding: var(--space-s);
  }

  .languages-dark-mode {
    display: none;
  }

  :global(.darkmode) .languages-light-mode {
    display: none;
  }

  :global(.darkmode) .languages-dark-mode {
    display: grid;
  }
</style>
