---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import Hero from '@components/Hero.astro'
import Feature from '@components/Feature.astro'
import Counter from '@components/Counter.astro'
import ContentMedia from '@components/ContentMedia.astro'
import ExternalLink from '@components/ExternalLink.astro'
import { Accordion, AccordionItem, Avatar, AvatarGroup } from 'accessible-astro-components'

import argo from '@assets/img/logos/argo.png'
import argoDark from '@assets/img/logos/argo_dark.png'
import astro from '@assets/img/logos/astro.png'
import astroDark from '@assets/img/logos/astro_dark.png'
import docker from '@assets/img/logos/docker.png'
import dockerDark from '@assets/img/logos/docker_dark.png'
import github from '@assets/img/logos/github.png'
import githubDark from '@assets/img/logos/github_dark.png'
import graphql from '@assets/img/logos/graphql.png'
import graphqlDark from '@assets/img/logos/graphql_dark.png'
import k3s from '@assets/img/logos/k3s.png'
import k3sDark from '@assets/img/logos/k3s_dark.png'
import mongodb from '@assets/img/logos/mongodb.png'
import mongodbDark from '@assets/img/logos/mongodb_dark.png'
import netlify from '@assets/img/logos/netlify.png'
import netlifyDark from '@assets/img/logos/netlify_dark.png'
import postgresql from '@assets/img/logos/postgresql.png'
import postgresqlDark from '@assets/img/logos/postgresql_dark.png'
import rider from '@assets/img/logos/rider.png'
import riderDark from '@assets/img/logos/rider_dark.png'
import sharp from '@assets/img/logos/sharp.png'
import sharpDark from '@assets/img/logos/sharp_dark.png'
import typescript from '@assets/img/logos/typescript.png'
import typescriptDark from '@assets/img/logos/typescript_dark.png'
---

<DefaultLayout title="Home">
  <Hero />
  <section class="my-64">
    <div class="container">
      <h2 class="mb-16 text-6xl">Features</h2>
      <div class="grid grid-cols-1 gap-12 md:grid-cols-2 lg:grid-cols-3">
        <Feature icon="lucide:square-terminal" title="Full Stack">
          Proficient in designing, building, and maintaining dynamic web applications with a strong foundation in both
          frontend and backend technologies.
        </Feature>
        <Feature icon="lucide:medal" title="Academic Excellence">
          Graduated with distinction from technical college, achieving top grades in all subjects and earning special
          honors.
        </Feature>
        <Feature icon="lucide:puzzle" title="Strategy-Minded">
          Skilled in developing innovative solutions and applying strategic approaches to problem-solving in complex
          scenarios.
        </Feature>
      </div>
    </div>
  </section>
  <ContentMedia imgSrc="/starlight-cover.png">
    <h2>OSS Contributor</h2>
    <p class="text-2xl">
      Regular contributions to my favourite open-source project: <ExternalLink href="https://starlight.astro.build"
        >Starlight</ExternalLink
      > â€” a documentation framework built on top of <ExternalLink href="https://astro.build">Astro</ExternalLink>
    </p>
  </ContentMedia>
  <ContentMedia imgSrc="/diploma-thesis-cover.png" reverseImg={true}>
    <h2>Diploma Thesis</h2>
    <p class="text-2xl">
      A SOA solution with Siemens AG to analyze power grid anomalies, featuring a Kafka pipeline, PostgreSQL, GraphQL
      API, and an Angular dashboard for visualisation. Check out the full story and technical details <a
        href="/portfolio/diploma-thesis">here</a
      >. Only available in German.
    </p>
  </ContentMedia>
